class Solution:
    def compress(self, chars: List[str]) -> int:
        anchor=write=0
        for i,char in enumerate(chars):
            if i+1 == len(chars) or chars[i+1] != char:
                chars[write]=chars[anchor]
                write+=1
                if i > anchor:
                    tmp=str(i-anchor+1)
                    for digits in tmp:
                        chars[write]=digits
                        write+=1
                anchor=i+1                    
        return write
