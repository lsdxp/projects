class Solution:
    def isPowerOfThree(self, n: int) -> bool:
        if n<=0:
            return False
        if n % 3 != 0 and n != 1:
            return False
        if n == 3 or n == 1:
            return True
        return self.isPowerOfThree(int(n/3))


class Solution:
    def isPowerOfThree(self, n: int) -> bool:
        if n<1:
            return False
        
        while n % 3 == 0:
            n=int(n/3)
        
        return n == 1
