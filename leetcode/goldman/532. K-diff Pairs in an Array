class Solution:
    def findPairs(self, nums: List[int], k: int) -> int:
        l=len(nums)
        if l<2:
            return 0
        dict={}
        for i in nums:
            if i not in dict:
                dict[i]=1
            else:
                dict[i]+=1
            
        count=0
        for key,value in dict.items():
            if key+k in dict:
                if k!=0 or dict[key+k]>1 :
                    count+=1                    
        return count
