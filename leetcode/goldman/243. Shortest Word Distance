class Solution:
    def shortestDistance(self, wordsDict: List[str], word1: str, word2: str) -> int:
        l1=l2=-1
        minD=len(wordsDict)
        for i in range(len(wordsDict)):
            if wordsDict[i] == word1:
                l1=i
            if wordsDict[i] == word2:
                l2=i
            
            if l1 != -1 and l2 != -1:
                minD=min(minD,abs(l1-l2))
                
        return minD
